<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_orange"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:padding="@dimen/_5sdp">

    <TextView
        android:id="@+id/td"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="@string/discount"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/ic_cross" />

    <LinearLayout
        android:id="@+id/linear_qqq"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/td"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="center">

        <EditText
            android:id="@+id/enter_hagl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:hint="Enter Hagl Checkout Code here"
            android:textColor="@color/light_green"
            android:textColorHint="@color/light_green"
            android:textSize="20sp" />

    </LinearLayout>


    <!--    <EditText-->
    <!--        android:id="@+id/enter_hagl"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/_40sdp"-->
    <!--        android:layout_below="@+id/td"-->
    <!--        android:layout_marginLeft="@dimen/_15sdp"-->
    <!--        android:layout_marginTop="@dimen/_40sdp"-->
    <!--        android:layout_marginRight="@dimen/_15sdp"-->
    <!--        android:background="@drawable/curved_black"-->
    <!--        android:gravity="center"-->
    <!--        android:hint="Enter hagl code here"-->
    <!--        android:textAllCaps="true"-->
    <!--        android:textColor="@color/light_green"-->
    <!--        android:textSize="18sp" />-->

    <TextView
        android:id="@+id/td_applycode"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/linear_qqq"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/curved_green"
        android:gravity="center"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>
